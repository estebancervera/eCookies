<%- include("partials/header") %>

<link rel="stylesheet" href="/new.css">


<%- include("partials/navbar") %>

<div class="container">
     
<form action="/products" method="POST"  enctype="multipart/form-data" >

          <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
          </div>
          <div class="custom-file">
            <input type="file" class="custom-file-input" name="file"id="inputGroupFile01" required aria-describedby="inputGroupFileAddon01">
            <label class="custom-file-label" for="inputGroupFile01">Choose a photo</label>
          </div>
        </div>

        
          <div class="form-group  ">
             <label for="FormControlInput1">Product Name</label>
            <input type="text" name="product[name]" class="form-control" id="FormControlInput1"  required placeholder="">
          </div>

          <div class="form-group">
            <label for="FormControlTextarea1">Description</label>
            <textarea class="form-control" name="product[description]" id="FormControlTextarea1" rows="3" required></textarea>
          </div>

          <div class="form-group">
             <label for="FormControlInputNumber">Product Price</label>
            <input type="number"  name="product[price]"  class="form-control" id="FormControlInputNumber" placeholder="" required>
          </div>

          <div class="form-group">
              <input type="checkbox"  name="product[available]" class="form-check-input" id="Check1" >
              <label class="form-check-label"    for="Check1">Available</label>
        </div>
	
		 <div class="form-group">
             <button type="submit button"  class="btn btn-danger">ADD PRODUCT</button>
        </div>
		

</form>
</div>   






<%- include("partials/framejs") %>
<script type="text/javascript" src="/navbar.js"></script>
<script type="text/javascript" src="/new.js"></script>

<%- include("partials/footer") %>